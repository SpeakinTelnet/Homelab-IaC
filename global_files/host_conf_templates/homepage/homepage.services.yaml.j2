            type: paperlessngx
            url: {{ service }}
            username: {{ lookup('vars', 'homepage_' + service | replace('.','_') + '_username') }}
            password: {{ lookup('vars', 'homepage_' + service | replace('.','_') + '_password') }}

{% endfor %}
