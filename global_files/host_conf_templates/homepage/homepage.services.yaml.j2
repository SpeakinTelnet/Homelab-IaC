- Media:
{% for service in groups['jellyfin'] %}
    - Jellyfin:
        icon: jellyfin
        href: {{ service }}:8096
        ping: {{ service }}:8096
        description: Media Server
        widget:
            type: jellyfin
            url: {{ service }}:8096
            key: {{ lookup('vars', 'homepage_' + service | replace('.','_') + '_key') }}

{% endfor %}
{% for service in groups['jellyseerr'] %}
