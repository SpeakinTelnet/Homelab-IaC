[Unit]
  Description=heimdalld
  StartLimitIntervalSec=500
  StartLimitBurst=5

[Service]
  User=cryptobro
  Group=cryptobro
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=/usr/bin
  ExecStart=/usr/bin/heimdalld start \
    --home "/var/lib/heimdall" \
    --chain={{ heimdall_network }} \
    --rest-server
  Type=simple
  LimitNOFILE=65536

[Install]
  WantedBy=multi-user.target